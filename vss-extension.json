{
    "manifestVersion": 1,
    "id": "build-release-task",
    "name": "REBAR Build and Release Tools",
    "version": "0.0.1",
    "publisher": "Neetika",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building/releasing with REBAR. Includes one build/release task.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/cat.gif"        
    },
    "files": [
        {
            "path": "custombuildtask"
        }
    ],
    "contributions": [
        {
            "id": "custom-build-release-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "custombuildtask"
            }
        }
    ]
}
